#!/usr/bin/env node
var agent = require('..')

async function exit() {
  await agent.shutdown()
  process.exit(0)
}

process.on('SIGINT', () => {
  exit()
})
process.on('SIGTERM', () => {
  exit()
})
process.on('uncaughtException', err => {
  console.error(`Uncaught exception: ${err.stack}`)
  process.exit(1)
})

agent.startup()
